//programme to sum the numbers from 1 to an entered number
#include <iostream>
using namespace std;

int main()
{
	int number, sum;
	cout << "Enter a number: ";
	cin >> number;
	sum = 0;
	for (int i = 0; i < number; i++)
	{
		sum = sum + i;
	}
	cout << "The sum of the numbers from 1 to " << number << " is: " << sum << endl;

	return 0;
}
