//programme to convert feet and inches to centimetres
#include <iostream>
using namespace std;

int main()
{
	int feet, inches, centimetres;
	cout << "Enter the number of feet: ";
	cin >> feet;
	cout << "Enter the number of inches: ";
	cin >> inches;
	cout << "You entered " << feet << "ft " << inches << "inches. \n";
	centimetres = ((feet * 12) + inches)*2.54;
	cout << "The equivalent in centimetres is: " << centimetres << endl;

	int x;
	cin >> x;

	return 0;
}
